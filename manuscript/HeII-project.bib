	note = {ADS Bibcode: 2019AJ....158..192L},
	keywords = {847, Astrophysics - Astrophysics of Galaxies, Interstellar medium, 1833, 1570, 1622, 1806, 837, Interstellar dust extinction, Starburst galaxies, Stellar populations, Wolf–Rayet stars, Young star clusters},
	pages = {192},
